pipeline {
    agent any

    stages {
        stage('Git clone') {
            steps {
                echo "git clone from github"
                git branch: 'main', credentialsId: 'github-id', url: 'https://github.com/lyhou123/DevOps.git'
                sh 'ls -lrt'
                sh 'pwd'
            }
        }
        stage('Build images') {
            steps {
                sh 'docker build -t lyhou123/react:1.2 -f react-dockerfile .'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker run -d -p 8088:80 --name react-test lyhou123/react:1.2'
            }
        }
        stage('curl ip public') {
            steps {
                sh 'curl ifconfig.me'
            }
        }
        stage('Clean workspace') {
            steps {
                cleanWs()
            }
        }
    }
}
